  #dropdown::before {
    content: '';
    border-left: 0.75rem solid transparent;
    border-right: 0.75rem solid transparent;
    border-bottom: 0.75rem solid #fff;
    position: absolute;
    top: -10px;
    right: 12px;
  }

  #dropdown .content {
    display: flex;
    gap: 10px;
  }

  #dropdown .content > div {
    padding: 12px 0px;
    flex: 1;
  }

  #dropdown .content > svg {
    width: 48px;
    height: 48px;
    margin-left: 12px;
  }

  #dropdown .item {
    cursor: pointer;
    padding: 12px;
    display: flex;
    align-items: center;
    color: #444;
  }

  #dropdown .item:hover {
    background-color: #f4f4f4;
  }

  #dropdown .item svg {
    width: 20px;
    height: 20px;
    margin-right: 10px;
  }

  #sidenav {
    position: fixed;
    top: 0px;
    left: -300px;
    width: 300px;
    height: 100vh;
    background-color: #011722;
    z-index: 5;
    display: flex;
    flex-direction: column;
    padding: 20px 0px;
    transition: all .2s ease-in-out;
  }

  #sidenav.show {
    left: 0px;
  }

  #sidenav a {
    color: #b3babd;
  }

  #sidenav .logo {
    height: 200px;
    margin-bottom: 30px;
  }

  #sidenav .item {
    margin: 3px 0px;
    align-items: center;
    display: flex;
    padding: 15px 35px;
  }

  #sidenav svg {
    width: 25px;
    height: 25px;
    margin-right: 10px;
  }

  .container {
    padding: 10px;
    padding-top: 60px;
  }

  .mt-sm {
    margin-top: 10px;
  }

  .title {
    font-size: 20px;
    font-weight: 500;
    color: #eee;
  }

