{
  "name": "shadow-accounts",
  "type": "module",
  "version": "1.0.0",
  "description": "Shadow accounts microservice",
  "main": "src/main.ts",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist logs playwright-report test-results",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "lint:fix": "eslint \"{src,tests}/**/*.ts\" --fix",
    "build:css": "tailwindcss -i ./public/styles/main.css -o ./public/styles/global.css -m",
    "test": "bun run scripts/test.ts",
    "dev": "bun run scripts/dev.ts",
    "build": "bun run scripts/build.ts",
    "start": "bun run src/main.ts",
    "seeder": "bun run src/seeder.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leanderpaul/shadow-accounts-service.git"
  },
  "author": "Leander Paul",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leanderpaul/shadow-accounts-service/issues"
  },
  "homepage": "https://github.com/leanderpaul/shadow-accounts-service#readme",
  "dependencies": {
    "@fastify/compress": "^6.5.0",
    "@fastify/cookie": "^9.1.0",
    "@fastify/static": "^6.12.0",
    "@leanderpaul/shadow-service": "^0.0.13",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/platform-fastify": "^10.2.8",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/throttler": "^5.0.1",
    "@playwright/test": "^1.42.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "mongoose-lean-virtuals": "^0.9.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.1",
    "@commitlint/config-conventional": "^18.4.0",
    "@nestjs/testing": "^10.0.0",
    "@types/jquery": "^3.5.27",
    "@types/lodash": "^4.14.201",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "bun-types": "latest",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.0",
    "tailwindcss": "^3.3.5"
  }
}
